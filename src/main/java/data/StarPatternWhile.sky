# Define the number of rows for the pattern
define rows := 5;

# Star pattern using while loop
show_nl("Left-aligned Triangle:");
define i := 1;
define j := 1;
do (i <= rows) {
    # Print stars for the current row
    j := 1;
    do (j <= i) {
        show("*");
        j := j + 1;
    }

    show_nl("");  # Move to the next line after printing stars for the current row
    i := i + 1;
}
